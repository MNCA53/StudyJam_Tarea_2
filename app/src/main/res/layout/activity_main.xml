<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hp.calculadora_tarea.MainActivity"
        android:background="@drawable/imagen"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:onClick="uno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="1"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="dos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="2"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="tres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="3"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="suma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="+"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:id="@+id/linearLayout">
            <Button
                android:onClick="cuatro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="4"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="cinco"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="5"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="seis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="6"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="resta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="-"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center">
            <Button
                android:onClick="siete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="7"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="ocho"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="8"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="nueve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="9"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="multiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="*"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true">
            <Button
                android:onClick="limpiar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="AC"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="cero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="0"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"/>
            <Button
                android:onClick="division"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/boton"
                android:text="/"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#86A70E"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            android:gravity="center"

            >
            <EditText
                android:id="@+id/etProceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#ffffff"/>
            <EditText
                android:id="@+id/Resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:textColor="#ffffff"/>
            <Button
                android:onClick="igual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton"
                android:textSize="50sp"
                android:text="="
                android:textColor="#86A70E"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>


